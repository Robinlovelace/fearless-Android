<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/extrinsicBuilderContainer"
    android:background="@color/black"
    android:layout_height="match_parent">

    <jp.co.soramitsu.common.view.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="Extrinsic Builder" />

    <jp.co.soramitsu.common.view.LabeledTextView
        android:id="@+id/moduleChooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x2"
        android:layout_marginTop="@dimen/x2"
        android:layout_marginEnd="@dimen/x2"
        app:actionIcon="@drawable/ic_pin_white_24"
        app:label="Module"
        tools:message="Staking" />

    <jp.co.soramitsu.common.view.LabeledTextView
        android:id="@+id/callChooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x2"
        android:layout_marginTop="@dimen/x2"
        android:layout_marginEnd="@dimen/x2"
        app:actionIcon="@drawable/ic_pin_white_24"
        app:label="Call"
        tools:message="Nominate" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/argumentsContainer"
            android:layout_height="wrap_content" />
    </ScrollView>

    <jp.co.soramitsu.common.view.PrimaryButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/extrinsicBuilderSend"
        android:layout_marginBottom="24dp"
        style="@style/Widget.Fearless.Button.Primary"
        android:text="Send"  />
</LinearLayout>